<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TypicalView"
    tools:context=".settings.ui.SettingsFragment">

    <Button
        android:id="@+id/bt_back"
        style="@style/BackButtonStyle"
        android:text="@string/settings" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"
        style="@style/SwitchTextStyle"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/zero_value"
        android:checked="true"
        android:enabled="true"
        android:minHeight="@dimen/min_height_button"
        android:paddingEnd="@dimen/right_switch_offset"
        android:text="@string/dark_theme"
        android:thumb="@drawable/ic_knob"
        app:thumbTint="?attr/thumbColor"
        app:track="@drawable/ic_track"
        app:trackTint="?attr/trackColor" />

    <Button
        android:id="@+id/bt_share"
        style="@style/SettingsTransparentButtonStyle"
        android:text="@string/share_application"
        app:icon="@drawable/ic_share_lm" />

    <Button
        android:id="@+id/bt_support"
        style="@style/SettingsTransparentButtonStyle"
        android:text="@string/tech_support"
        app:icon="@drawable/ic_tech_support_lm" />

    <Button
        android:id="@+id/bt_user_agreement"
        style="@style/SettingsTransparentButtonStyle"
        android:text="@string/user_agreement"
        app:icon="@drawable/ic_more_lm" />

</LinearLayout>

