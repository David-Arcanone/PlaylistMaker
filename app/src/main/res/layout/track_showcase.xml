<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/min_height_button"
    android:gravity="center"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/track_image"
        android:layout_width="@dimen/track_pic"
        android:layout_height="@dimen/track_pic"
        android:layout_marginRight="@dimen/icon_padding"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="@dimen/zero_value"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            style="@style/SmallTextStyle"
            android:id="@+id/track_name"
            android:layout_width="match_parent"
            android:textAlignment="textStart"
            android:ellipsize="end"
            tools:text="@string/template_text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">
            <TextView
                android:id="@+id/track_author"
                style="@style/VerySmallTextStyle"
                android:textAlignment="textStart"
                android:ellipsize="end"
                tools:text="@string/template_text"
                />
            <ImageView
                android:layout_width="@dimen/point_size"
                android:layout_height="@dimen/point_size"
                android:background="@drawable/ic_point"
                android:backgroundTint="?attr/iconTint"/>
            <TextView
                android:id="@+id/track_time"
                style="@style/VerySmallTextStyle"
                android:textAlignment="textStart"
                android:ellipsize="end"
                tools:text="@string/template_text"/>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:contentDescription="@string/track_info"
        android:src="@drawable/ic_more_lm"
        android:background="@color/transparent"
        android:paddingLeft="@dimen/icon_padding"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"/>
</LinearLayout>