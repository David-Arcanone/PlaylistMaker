<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/min_height_button"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playlist_image"
        android:layout_width="@dimen/track_pic"
        android:layout_height="@dimen/track_pic"
        android:layout_marginRight="@dimen/icon_padding" />

    <LinearLayout
        android:layout_width="@dimen/zero_value"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlist_name"
            style="@style/SmallTextStyle"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:textAlignment="textStart"
            tools:text="Loading" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tracks_number"
                style="@style/VerySmallTextStyle"
                android:ellipsize="end"
                android:textAlignment="textStart"
                tools:text="Loading" />

            <TextView
                android:id="@+id/tracks_pronounce"
                style="@style/VerySmallTextStyle"
                android:ellipsize="end"
                android:textAlignment="textStart"
                tools:text=" Loading" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>