<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">@dimen/buttons_gap</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_value</item>
        <item name="android:padding">@dimen/zero_value</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">@dimen/buttons_gap</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_title_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="TransparentButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/zero_value</item>
        <item name="android:layout_marginBottom">@dimen/zero_value</item>
        <item name="android:padding">@dimen/zero_value</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/icon</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="SettingsTransparentButtonStyle" parent="TransparentButtonStyle">
        <item name="android:minHeight">@dimen/min_height_button</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="BackButtonStyle" parent="TransparentButtonStyle">
        <item name="android:layout_marginBottom">@dimen/settings_first_margin</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="icon">@drawable/ic_back_lm</item>
        <item name="iconPadding">@dimen/settings_first_margin</item>
        <item name="android:textSize">@dimen/primary_title_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SmallTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TypicalView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/horizontal_screen_padding</item>
        <item name="android:paddingTop">@dimen/top_screen_padding</item>
        <item name="android:paddingEnd">@dimen/settings_padding</item>
        <item name="android:paddingBottom">@dimen/settings_screen_bottom_padding</item>
    </style>
    <style name="EditText">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@color/blue</item>
        <item name="android:paddingLeft">@dimen/settings_padding</item>
        <item name="android:drawablePadding">@dimen/icon_padding</item>
        <item name="android:drawableTint">?attr/iconTint</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/iconTint</item>
    </style>
</resources>