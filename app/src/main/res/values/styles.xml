<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">@dimen/buttons_gap</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_value</item>
        <item name="android:padding">@dimen/zero_value</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">@dimen/buttons_gap</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_title_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:insetTop">@dimen/zero_value</item>
        <item name="android:insetBottom">@dimen/zero_value</item>
    </style>

    <style name="RefreshButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">@dimen/settings_first_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/small_icon_padding</item>
        <item name="android:paddingLeft">@dimen/icon_padding</item>
        <item name="cornerRadius">@dimen/strange_refresh_radius</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="iconPadding">@dimen/zero_value</item>
        <item name="iconSize">@dimen/zero_value</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/refresh_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:insetTop">@dimen/zero_value</item>
        <item name="android:insetBottom">@dimen/zero_value</item>
        <item name="android:minWidth">@dimen/min_width_refresh_button</item>
        <item name="android:minHeight">@dimen/clear_height_button</item>
    </style>

    <style name="TransparentButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/zero_value</item>
        <item name="android:layout_marginBottom">@dimen/zero_value</item>
        <item name="android:padding">@dimen/zero_value</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/icon</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SettingsTransparentButtonStyle" parent="TransparentButtonStyle">
        <item name="android:minHeight">@dimen/min_height_button</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="BackButtonStyle" parent="TransparentButtonStyle">
        <item name="android:layout_marginBottom">@dimen/settings_first_margin</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="icon">@drawable/ic_back_lm</item>
        <item name="iconPadding">@dimen/settings_first_margin</item>
        <item name="android:textSize">@dimen/primary_title_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SmallTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">@integer/search_edit_text_max_line</item>
    </style>

    <style name="VerySmallTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/icon</item>
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">@integer/search_edit_text_max_line</item>
    </style>

    <style name="TypicalView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/horizontal_screen_padding</item>
        <item name="android:paddingTop">@dimen/top_screen_padding</item>
        <item name="android:paddingEnd">@dimen/settings_padding</item>
        <item name="android:paddingBottom">@dimen/settings_screen_bottom_padding</item>
    </style>

    <style name="EditText">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@color/blue</item>
        <item name="android:paddingLeft">@dimen/settings_padding</item>
        <item name="android:drawablePadding">@dimen/icon_padding</item>
        <item name="android:drawableTint">?attr/iconTint</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/iconTint</item>
    </style>

    <style name="ErrorText">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/zero_value</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginTop">@dimen/horizontal_screen_padding</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ErrorPicture">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/error_image</item>
        <item name="android:layout_height">@dimen/error_image</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SwitchTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">@integer/search_edit_text_max_line</item>
    </style>

    <style name="PopupGroup">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="PlayerTitleNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">@integer/search_edit_text_max_line</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/primary_title_size</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="PlayerTitleAuthorStyle" parent="PlayerTitleNameStyle">
        <item name="android:textSize">@dimen/refresh_button</item>
    </style>

    <style name="PlayerDescriptionTableStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/horizontal_screen_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/player_description_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="PlayerDescriptionValueStyle" parent="PlayerDescriptionTableStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">@integer/search_edit_text_max_line</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TabStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/refresh_button</item>
        <item name="android:textFontWeight">500</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorHeight">@dimen/small_offset</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="android:background">@color/transparent</item>

    </style>
</resources>